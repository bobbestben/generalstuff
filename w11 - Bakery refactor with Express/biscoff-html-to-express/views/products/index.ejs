<%- include('../partials/header'); %>

<div id="page-products-list" class="container">
    <div class="row my-5">
        <% products.forEach(item => { %>
            <div class="col-4">
                <div class="card">
                    <img src="/img/<%= item.img %>" class="card-img-top">
                    <div class="card-body">
                      <p class="card-text"><a href="/products/<%= item._id %>"><%= item.name %></a></p>
                      <p class="card-text"><%= item.price %></p>
                    </div>
                </div>
            </div>
        <% }) %> 
    </div>
</div>

<%- include('../partials/footer'); %>